<?xml version="1.0" encoding="utf-8"?>
<!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.hapi.sdk.HapiBot.DashboardLandingActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/dashtoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Profile text goes here"
            android:id="@+id/tv_profile" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hello, User!"
            android:id="@+id/tv_welcome"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"/>
        <com.hapi.sdk.HapiBot.GifView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="Hello World!"/>



        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Access Token"-->
        <!--android:id="@+id/textView" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_access_token"
        android:layout_gravity="center_horizontal"
        android:inputType="text"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="#25383C"
        />

        <ImageView
            android:id="@+id/test_image"
            android:src="@drawable/sleep_graph"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Refresh Token"-->
        <!--android:id="@+id/textView2" />-->

    <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/input_refresh_token"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:inputType="text" />-->

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Access Token"
            android:id="@+id/button_refresh_token"
            android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:visibility="invisible"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/float_margin_right"
        android:layout_marginBottom="340dp"
        android:src="@drawable/ic_menu_camera"
        android:elevation="6dp"
        android:id="@+id/camera"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/floatbtncolor1"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/float_margin_right"
        android:layout_marginBottom="260dp"
        android:src="@drawable/ic_menu_gallery"
        android:elevation="6dp"
        android:id="@+id/file"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/floatbtncolor1"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/float_margin_right"
        android:layout_marginBottom="180dp"
        android:src="@drawable/ic_action_call"
        android:elevation="6dp"
        android:id="@+id/speak"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/floatbtncolor1"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/float_margin_right"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_action_call"
        android:elevation="6dp"
        android:id="@+id/call"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/floatbtncolor2"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/float_margin_right"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_action_plus"
        android:elevation="6dp"
        android:id="@+id/plus"
        app:pressedTranslationZ="12dp"/>


</android.support.design.widget.CoordinatorLayout>
